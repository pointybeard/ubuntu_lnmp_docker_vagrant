#add_header "Access-Control-Allow-Origin" "*" always;
add_header "Access-Control-Allow-Origin" $allow_origin always;
add_header "Vary" "Origin";

add_header "Access-Control-Allow-Credentials" "true" always;
add_header "Access-Control-Allow-Methods" "GET, POST, OPTIONS, DELETE, PUT, PATCH, HEAD" always;
add_header "Access-Control-Allow-Headers" "Accept, Accept-Language, Content-Language, Content-Type, Authorization, Cookie, X-Requested-With, Origin, Host, Content-Disposition" always;

add_header "Access-Control-Max-Age" "3600" always;
